<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define"
         xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">
  <l:layout title="Edit Maintenances" norefresh="true">
    <j:if test="${it.isAgent()}">
      <st:include it="${it.getAgentComputer()}" page="sidepanel.jelly"/>
    </j:if>
    <j:if test="${it.isCloud()}">
      <st:include it="${it.getCloud()}" page="sidepanel.jelly"/>
    </j:if>
    <l:main-panel>
      <h1>${%Edit Planned Maintenances}</h1>
      <br/>
      <f:form action="configSubmit" method="post" name="config" class="jenkins-form">
        <f:entry title="${%Maintenance Windows}" help="/plugin/agent-maintenance/help/help-maintenanceList.html">
          <f:helpArea />
          <f:repeatable name="maintenanceWindows" var="mw" items="${it.maintenanceWindows}" minimum="0">
            <j:if test="${it.isCloud()}">
              <st:include class="${it.getMaintenanceWindowClass()}" page="cloud-config.jelly"/>
            </j:if>
            <j:if test="${it.isAgent()}">
              <st:include class="${it.getMaintenanceWindowClass()}" page="agent-config.jelly"/>
            </j:if>
              <f:invisibleEntry>
                <f:textbox field="userid" value="${mw.userid}"/>
              </f:invisibleEntry>
              <f:invisibleEntry>
                <f:textbox field="id" value="${mw.id}"/>
              </f:invisibleEntry>
              <div align="right">
                <f:repeatableDeleteButton />
              </div>
          </f:repeatable>
        </f:entry>

        <f:entry title="${%Recurring Maintenance Windows}" help="/plugin/agent-maintenance/help/help-maintenanceList.html">
          <f:helpArea />
          <f:repeatable name="recurringMaintenanceWindows" var="mw" items="${it.recurringMaintenanceWindows}" minimum="0">
              <st:include class="${it.getRecurringMaintenanceWindowClass()}" page="config.jelly"/>
              <div align="right">
                  <f:repeatableDeleteButton />
              </div>
          </f:repeatable>
        </f:entry>

          <f:bottomButtonBar>
          <f:submit value="${%Save}"/>
          <f:apply/>
        </f:bottomButtonBar>
      </f:form>
    </l:main-panel>
  </l:layout>
</j:jelly>
