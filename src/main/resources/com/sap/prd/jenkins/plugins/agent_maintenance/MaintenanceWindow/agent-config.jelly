<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler"
         xmlns:f="/lib/form">
  <st:include class="${it.getMaintenanceWindowClass()}" page="config.jelly"/>

  <f:entry field="keepUpWhenActive" title="${%Keep agent online while jobs are running}"
           help="/plugin/agent-maintenance/help/help-keepUpWhenActive.html">
    <f:checkbox default="true" checked="${mw.keepUpWhenActive}"/>
  </f:entry>
  <f:entry field="maxWaitMinutes" title="${%Max waiting time in minutes for builds to finish}"
           help="/plugin/agent-maintenance/help/help-maxWaitMinutes.html">
    <f:textbox default="-1" value="${mw.maxWaitMinutes}"/>
  </f:entry>
  <f:entry field="takeOnline" title="${%Start agent automatically after maintenance}"
           help="/plugin/agent-maintenance/help/help-takeOnline.html">
    <f:checkbox default="true" checked="${mw.takeOnline}"/>
  </f:entry>
</j:jelly>
